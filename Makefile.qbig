lhpcdir=$(work)/AFF/build.qbig

tmLQCD_src=$(work)/tmLQCD-as

tmLQCDdir=$(work)/tmLQCD-as/build

tmLQCD_libs=-lwrapper -lhmc -lmonomial -loperator -lsolver -linit -lmeas -llinalg -lhmc -lxchange -lrational -lio -lsmear

