LIBS = -L$(cudadir)/lib64 -L$(qudadir)/lib -L$(lhpcdir)/lib  -L$(lemondir)/lib/  -L$(limedir)/lib/ -L$(fftwdir)/lib -lfftw_mpi -lfftw  -L$(tmLQCDdir)/lib/ $(tmLQCD_libs) -lquda -llemon -llime -llapack -lblas -lcuda -lcudart -lcublas -lgfortran -llhpc-aff -lhdf5_serial -lm

LDFLAGS = -L$(cudadir)/lib64 -L$(cudadir)/lib64/stubs  -L$(qudadir)/lib  -L$(lemondir)/lib/ -L$(limedir)/lib/ -L$(fftwdir)/lib -lfftw_mpi -lfftw -L$(tmLQCDdir)/lib/ $(tmLQCD_libs) -lquda  -llemon -llime -llapack -lblas -lcuda -lcudart -lcublas -lgfortran  -llhpc-aff -lhdf5_serial -lm


LINK = $(CXX) -o $@ ${LDFLAGS}
COMPILE = ${CXX} $(INCLUDE) -o $@ ${CXXFLAGS}

